# Copy this to .env and fill in your actual values
# SECURITY WARNING: Never commit this file to version control!

# Django Security
SECRET_KEY=your-very-secret-key-here-generate-a-new-one
DEBUG=True

# Database Configuration  
DB_NAME=teamschedule
DB_USER=postgres
DB_PASSWORD=your-database-password-here
DB_HOST=localhost
DB_PORT=5432

# Render will provide DATABASE_URL automatically
# DATABASE_URL=postgres://user:password@host:port/database

# Email Configuration (for Gmail)
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-gmail-app-password

# Allowed Hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1

# For Render deployment, add your Render app domain:
# ALLOWED_HOSTS=localhost,127.0.0.1,your-app-name.onrender.com
